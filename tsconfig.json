{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": false,
    "emitDeclarationOnly": true,
    // output .js.map sourcemap files for consumers
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
